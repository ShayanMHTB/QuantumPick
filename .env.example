# QuantumPick Environment Variables

#-------------------------------------------------
# General Settings
#-------------------------------------------------
APP_ENV=development                          # Environment (development, staging, production)
APP_DEBUG=true                               # Enable debug mode
APP_SECRET_KEY=your_super_secret_key_here    # Secret key for encryption/sessions
PROJECT_NAME=QuantumPick                     # Application name

#-------------------------------------------------
# PostgreSQL Configuration
#-------------------------------------------------
POSTGRES_VERSION=14                          # PostgreSQL version
POSTGRES_HOST=postgresql                     # PostgreSQL host
POSTGRES_PORT=5432                           # PostgreSQL port (internal)
POSTGRES_DB=quantum_pick                     # Database name
POSTGRES_USER=admin                          # Database username
POSTGRES_PASSWORD=strong_password_here       # Database password
POSTGRES_MAX_CONNECTIONS=100                 # Maximum connections
POSTGRES_SHARED_BUFFERS=128MB                # Shared buffers size
HOST_POSTGRESQL_PORT=5432                    # Host port for PostgreSQL
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}  # Connection string for Prisma

#-------------------------------------------------
# pgAdmin Configuration
#-------------------------------------------------
PGADMIN_DEFAULT_EMAIL=admin@example.com      # pgAdmin login email
PGADMIN_DEFAULT_PASSWORD=pgadmin_password    # pgAdmin login password
HOST_PGADMIN_PORT=5050                       # Host port for pgAdmin

#-------------------------------------------------
# Redis Configuration
#-------------------------------------------------
REDIS_HOST=redis                             # Redis host
REDIS_PORT=6379                              # Redis port (internal)
REDIS_PASSWORD=null                          # Redis password (null for none)
REDIS_DB=0                                   # Redis database number
REDIS_MAXMEMORY=256mb                        # Redis maximum memory
HOST_REDIS_PORT=6379                         # Host port for Redis
HOST_REDIS_INSIGHT_PORT=5540                 # Host port for RedisInsight
HOST_REDIS_COMMANDER_PORT=8081               # Host port for Redis Commander (alternative to RedisInsight)

#-------------------------------------------------
# RabbitMQ Configuration
#-------------------------------------------------
RABBITMQ_HOST=rabbitmq                       # RabbitMQ host
RABBITMQ_PORT=5672                           # RabbitMQ port (internal)
RABBITMQ_USER=guest                          # RabbitMQ username
RABBITMQ_PASSWORD=guest                      # RabbitMQ password
RABBITMQ_VHOST=/                             # RabbitMQ virtual host
HOST_RABBITMQ_PORT=5672                      # Host port for RabbitMQ
HOST_RABBITMQ_MANAGEMENT_PORT=15672          # Host port for RabbitMQ management interface

#-------------------------------------------------
# NestJS Configuration
#-------------------------------------------------
NEST_PORT=3000                               # NestJS server port (internal)
HOST_NEST_PORT=3000                          # Host port for NestJS
HOST_PRISMA_STUDIO_PORT=5555                 # Host port for Prisma Studio
JWT_SECRET=quantum-pick-development-secret-key-2025  # Secret for JWT tokens
JWT_EXPIRATION=3600                          # JWT expiration in seconds
NODE_ENV=development                         # Node environment

#-------------------------------------------------
# Next.js Configuration
#-------------------------------------------------
NEXT_PORT=3000                               # Next.js internal server port
HOST_NEXT_PORT=4000                          # Host port for Next.js
NEXT_PUBLIC_API_URL=http://localhost:3000    # API URL for frontend
NEXT_PUBLIC_FRONTEND_URL=http://localhost:4000  # Frontend URL for CORS

#-------------------------------------------------
# Web3 Configuration
#-------------------------------------------------
# Network Configuration (Production)
WEB3_NETWORK_ID=1                            # Ethereum network ID (1=mainnet, 31337=hardhat)
ETHEREUM_NETWORK=mainnet                     # Network name

# Provider URLs
WEB3_PROVIDER_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key  # Ethereum node provider
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY        # Alternative RPC URL via Infura
SEPOLIA_RPC_URL=                             # Sepolia testnet RPC (optional)
MAINNET_RPC_URL=                             # Mainnet RPC (optional)

# Gas Configuration
WEB3_GAS_PRICE=auto                          # Gas price (auto or specific amount)
GAS_LIMIT=3000000                            # Default gas limit
GAS_PRIORITY_MULTIPLIER=1.2                  # Gas price multiplier for faster confirmation
MAX_GAS_PRICE_GWEI=100                       # Maximum gas price in gwei
USE_EIP1559=true                             # Use EIP-1559 transactions
TX_CONFIRMATIONS=1                           # Confirmations to wait
TX_MAX_RETRIES=3                             # Transaction retry attempts
TX_RETRY_DELAY=5000                          # Retry delay in ms

#-------------------------------------------------
# Hardhat Configuration (Development)
#-------------------------------------------------
# Network Settings
HARDHAT_NETWORK=localhost                    # Hardhat network to use
HARDHAT_CHAIN_ID=31337                       # Hardhat local chain ID
HARDHAT_HOST=hardhat                         # Hardhat host in Docker
HARDHAT_PORT=8545                            # Hardhat port (internal)
HOST_HARDHAT_PORT=8545                       # Host port for Hardhat node

# Wallet Configuration
HARDHAT_MNEMONIC=test test test test test test test test test test test junk  # Fixed mnemonic for deterministic wallets

# Platform Wallets (populated after setup)
PLATFORM_OWNER_ADDRESS=0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266      # First hardhat account
PLATFORM_FEE_COLLECTOR_ADDRESS=0x70997970C51812dc3A010C7d01b50e0d17dc79C8  # Second hardhat account

#-------------------------------------------------
# Contract Addresses
#-------------------------------------------------
# Mock Token Addresses (Development)
MOCK_USDC_ADDRESS=                           # Mock USDC contract address
MOCK_DAI_ADDRESS=                            # Mock DAI contract address
MOCK_USDT_ADDRESS=                           # Mock USDT contract address

# Token Addresses by Network
USDC_ADDRESS_HARDHAT=                        # Mock USDC on Hardhat
USDC_ADDRESS_MAINNET=0xa0b86991c6218b36c1d19d4a2e9eb0ce3606eb48  # USDC on Ethereum Mainnet
USDC_ADDRESS_POLYGON=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174  # USDC on Polygon

# Lottery Factory Addresses
LOTTERY_FACTORY_ADDRESS=                     # Current active factory address
LOTTERY_FACTORY_ADDRESS_HARDHAT=             # Factory on Hardhat
LOTTERY_FACTORY_ADDRESS_MAINNET=             # Factory on Ethereum Mainnet
LOTTERY_FACTORY_ADDRESS_POLYGON=             # Factory on Polygon

# Other Contract Addresses
VRF_COORDINATOR_ADDRESS=                     # VRF coordinator address (mock for dev)
CONTRACT_ADDRESS_LOTTERY_FACTORY=            # Alternative factory contract reference

#-------------------------------------------------
# Private Keys (NEVER use in production)
#-------------------------------------------------
WEB3_PRIVATE_KEY=                            # Private key for contract deployment
DEPLOYER_PRIVATE_KEY=                        # Alternative deployment key
LOTTERY_DEPLOYER_PRIVATE_KEY=                # Dedicated lottery deployment key
LOTTERY_ADMIN_PRIVATE_KEY=                   # Admin wallet for testing
USER_WALLET_PRIVATE_KEY=                     # User wallet for testing

#-------------------------------------------------
# Event Listener Configuration
#-------------------------------------------------
EVENT_POLLING_INTERVAL=15000                 # Event polling interval in ms
EVENT_MAX_BLOCKS_LOOKBACK=1000               # Maximum blocks to look back for events

#-------------------------------------------------
# Lottery Configuration
#-------------------------------------------------
LOTTERY_CANCEL_ON_INSUFFICIENT_TICKETS=true  # Auto-cancel if minimum tickets not reached
USE_REAL_BLOCKCHAIN=false                    # Use real blockchain or mock (development)

#-------------------------------------------------
# Development Settings
#-------------------------------------------------
LOG_LEVEL=info                               # Logging level for development
AUTO_SETUP=true                              # Auto-setup environment on startup

#-------------------------------------------------
# Testing Configuration
#-------------------------------------------------
REPORT_GAS=false                             # Enable gas reporting in tests

#-------------------------------------------------
# External API Keys
#-------------------------------------------------
ETHERSCAN_API_KEY=                           # Etherscan API key for verification
ALCHEMY_API_KEY=                             # Alchemy API key
INFURA_API_KEY=                              # Infura API key

#-------------------------------------------------
# SIWE (Sign-In with Ethereum) Settings
#-------------------------------------------------
SIWE_DOMAIN=quantumpick.example.com          # Domain for SIWE authentication
SIWE_ORIGIN=https://quantumpick.example.com  # Origin for SIWE authentication
SIWE_STATEMENT=Sign in to QuantumPick with your Ethereum account.  # Statement for SIWE
SIWE_VERSION=1                               # SIWE version
SIWE_CHAIN_ID=${WEB3_NETWORK_ID}             # Chain ID for SIWE (should match WEB3_NETWORK_ID)

#-------------------------------------------------
# Monitoring Configuration
#-------------------------------------------------
HOST_PROMETHEUS_PORT=9090                    # Host port for Prometheus
HOST_GRAFANA_PORT=9091                       # Host port for Grafana (changed from default)

#-------------------------------------------------
# Docker Configuration
#-------------------------------------------------
# Volume paths
DATA_PATH=./dbs                              # Path for persistent data storage
